<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/task"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/NumberDiameter"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/addDiam"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:shadowColor="#452424" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/mat"
            android:textSize="18sp" />
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/back"

            android:entries="@array/material"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />




        <Button
            android:id="@+id/buttonCulc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:text="@string/buttonText"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" />




    </LinearLayout>



        <TableLayout
            android:layout_width="400dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="60dp">

                <TextView
                    android:id="@+id/msgVolume"
                    android:layout_marginEnd="10dp"
                    android:width="200dp"
                    android:text="@string/msgVolume"
                    android:textAlignment="textEnd"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/resVolume"
                    android:width="200dp"
                    android:padding="3dp"
                    android:textSize="20sp" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="60dp">

                <TextView
                    android:id="@+id/msgSurfaceArea"
                    android:layout_marginEnd="10dp"
                    android:width="180dp"
                    android:text="@string/msgArea"
                    android:textAlignment="textEnd"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/resSurfaceArea"
                    android:width="180dp"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:minHeight="60dp">

                <TextView
                    android:id="@+id/msgMass"
                    android:layout_marginEnd="10dp"
                    android:width="180dp"
                    android:text="@string/msgM"
                    android:textAlignment="textEnd"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/resMass"
                    android:width="180dp"
                    android:textSize="20sp" />
            </TableRow>

        </TableLayout>

</LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>